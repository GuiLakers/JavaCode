package password;

 

import java.util.Scanner;

 

/**

*

* @author Sony

*/

public class Password {

 

    /**

     * @param args the command line arguments

     */

    public static void main(String[] args) {

        // TODO code application logic here

        Scanner t = new Scanner(System.in);

        System.out.print("Nome: ");

        String[] nome = t.nextLine().split("");

        System.out.print("Sobrenome: ");

        String[] sobrenome = t.nextLine().split("");

        String a1 = nome[0];

        String aM = nome[nome.length/2];

        String aN = nome[nome.length-1];

        String b1 = sobrenome[0];

        String bM = sobrenome[sobrenome.length/2];

        String bN = sobrenome[sobrenome.length-1];

       

        System.out.println(a1 + aM + aN + b1 + bM + bN);

    }

   

}
